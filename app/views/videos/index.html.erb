<!-- Page Header -->
<div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Videos
                <small>New</small>
            </h1>
        </div>
</div>
<!-- /.row -->
<!-- Pcts Row -->
<div class="row">
<% for video in @videos %>

        <div class="col-md-4 portfolio-item">
        <%= link_to video_path(video) do %>
            
                <img class="img-responsive" src="http://placehold.it/700x400" alt="">
            
            <h3>
                <%= video.title %>
            </h3>
            <p><%= video.description %></p>
            <% end %>
        </div>
<% end %>
</div>